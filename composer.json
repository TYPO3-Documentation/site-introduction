        }
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "php": "^8.1",
        "bk2k/bootstrap-package": "dev-master",
        "typo3/cms-backend": "12.3.0 as dev-main",
        "typo3/cms-belog": "12.3.0 as dev-main",
        "typo3/cms-beuser": "12.3.0 as dev-main",
        "typo3/cms-core": "12.3.0 as dev-main",
        "typo3/cms-dashboard": "12.3.0 as dev-main",
        "typo3/cms-extbase": "12.3.0 as dev-main",
        "typo3/cms-extensionmanager": "12.3.0 as dev-main",
        "typo3/cms-felogin": "12.3.0 as dev-main",
        "typo3/cms-filelist": "12.3.0 as dev-main",
        "typo3/cms-filemetadata": "12.3.0 as dev-main",
        "typo3/cms-fluid": "12.3.0 as dev-main",
        "typo3/cms-form": "12.3.0 as dev-main",
        "typo3/cms-frontend": "12.3.0 as dev-main",
        "typo3/cms-impexp": "12.3.0 as dev-main",
        "typo3/cms-indexed-search": "12.3.0 as dev-main",
        "typo3/cms-info": "12.3.0 as dev-main",
        "typo3/cms-install": "12.3.0 as dev-main",
        "typo3/cms-linkvalidator": "12.3.0 as dev-main",
        "typo3/cms-lowlevel": "12.3.0 as dev-main",
        "typo3/cms-opendocs": "12.3.0 as dev-main",
        "typo3/cms-recordlist": "12.3.0 as dev-main",
        "typo3/cms-recycler": "12.3.0 as dev-main",
        "typo3/cms-redirects": "12.3.0 as dev-main",
        "typo3/cms-reports": "12.3.0 as dev-main",
        "typo3/cms-rte-ckeditor": "12.3.0 as dev-main",
        "typo3/cms-scheduler": "12.3.0 as dev-main",
        "typo3/cms-seo": "12.3.0 as dev-main",
        "typo3/cms-setup": "12.3.0 as dev-main",
        "typo3/cms-sys-note": "12.3.0 as dev-main",
        "typo3/cms-t3editor": "12.3.0 as dev-main",
        "typo3/cms-tstemplate": "12.3.0 as dev-main",
        "typo3/cms-viewpage": "12.3.0 as dev-main",
        "typo3/cms-workspaces": "12.3.0 as dev-main",
        "vlucas/phpdotenv": "^5.0"
    },
    "require-dev": {
        "codeception/codeception": "^5.0",
        "codeception/module-asserts": "^2.0",
        "codeception/module-webdriver": "^2.0 || ^3.0 || ^4.0"
    },
    "scripts": {
      "test": [
        "codecept run acceptance -d -c ./Tests/codeception.yml"
      ]
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin",
        "vendor-dir": "vendor",
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        }
    }
}
